{
  "name": "enzi-coffee-shop-backend",
  "version": "1.0.0",
  "description": "Backend API for Enzi Coffee Shop POS System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:db": "ts-node src/lib/test-db.ts",
    "test:auth": "ts-node src/utils/test-auth.ts",
    "test:middleware": "ts-node src/middleware/test-auth-middleware.ts",
    "test:routes": "ts-node src/routes/test-auth-routes.ts",
    "test:menu": "ts-node src/data/test-menu.ts",
    "test:menu-routes": "ts-node src/routes/test-menu-routes.ts",
    "test:order-routes": "ts-node src/routes/test-order-routes.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "coffee-shop",
    "pos",
    "api",
    "express",
    "typescript"
  ],
  "author": "Enzi Coffee Shop Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.12.0",
    "typescript": "^5.8.3",
    "zod": "^4.0.11"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2"
  }
}
